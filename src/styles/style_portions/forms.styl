select,
input,
textarea
  background-color $input_background_color
  color $input_front_color
  padding 10px
  border 1px solid $lines_color
  border-radius 5px
  box-sizing border-box
.input-wrapper
  padding 10px
  position relative
  select
    width 100%
  input
    width 100%
  label
    width 100%
    font-size 12px
    color $text_secondary
  textarea
    resize none
    width 100%
